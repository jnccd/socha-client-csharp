<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Software-Challenge C# Client Template</Title>
    <Version>23.0.2.1</Version>
    <Authors>Dobiko</Authors>
    <Company>Software-Challenge</Company>
    <Product>Software Challenge Client</Product>
    <PackageProjectUrl>https://github.com/jnccd/socha-client-csharp</PackageProjectUrl>
    <Description>Provides a client template for the software challenge upon which students can build their own clients in C#</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/jnccd/socha-client-csharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>socha;software-challenge;software-challenge-germany</PackageTags>
    <PackageReleaseNotes>Initial release with support for the game "Hey, danke f√ºr den Fisch!" in the season 22/23</PackageReleaseNotes>
    <NeutralLanguage>en-DE</NeutralLanguage>
    <PackageIcon>resources\logo.png</PackageIcon>
    <PackageId>Socha</PackageId>
  </PropertyGroup>

  <PropertyGroup>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="resources\logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
